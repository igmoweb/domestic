{
  "name": "domestic",
  "title": "Domestic Theme",
  "version": "0.1.0",
  "description": "Domestic Theme for WordPress",
  "homepage": "https://igmoweb.com",
  "license": "MIT",
  "main": "gulpfile.js",
  "scripts": {
    "postinstall": "npm run build && gulp wpPot && npm run composer:install",
    "composer": "docker run --rm --interactive -w /app --volume $PWD:/app composer",
    "composer:install": "npm run composer -- install",
    "package": "gulp",
    "start": "webpack-dev-server --mode development --env development",
    "build": "webpack --mode production --env production",
    "wppot": "gulp wpPot",
    "lint": "npm run lint:js && npm run lint:php",
    "lint:php": "npm run composer -- run-script lint:php",
    "lint:js": "eslint .",
    "fix:php": "npm run composer -- run-script fix:php",
    "fix:js": "eslint . --fix"
  },
  "keywords": [
    "WordPress",
    "Theme",
    "semantic",
    "mobile first",
    "customizable",
    "responsive"
  ],
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-es2015": "^7.0.0-beta.53",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.3.1",
    "babel-loader": "^8.0.4",
    "chokidar": "^2.0.4",
    "clean-webpack-plugin": "^1.0.0",
    "css-loader": "^1.0.1",
    "cssnano": "^4.1.7",
    "eslint": "^5.9.0",
    "eslint-config-wordpress": "^2.0.0",
    "file-loader": "^2.0.0",
    "foundation-sites": "6.4.3",
    "gulp": "git+https://github.com/gulpjs/gulp.git#v4.0.0",
    "gulp-prompt": "^1.1.0",
    "gulp-rename": "^1.4.0",
    "gulp-replace": "^1.0.0",
    "gulp-run-command": "0.0.9",
    "gulp-wp-pot": "^2.3.3",
    "gulp-zip": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.2.0",
    "mini-css-extract-plugin": "^0.4.5",
    "motion-ui": "~1.2.2",
    "node-sass": "^4.11.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "owl.carousel": "^2.3.4",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-merge": "^4.1.4",
    "webpack-rtl-plugin": "^1.7.0",
    "what-input": "^4.1.3",
    "write-file-webpack-plugin": "^4.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/igmoweb/domestic.git"
  },
  "bugs": {
    "url": "https://github.com/igmoweb/domestic/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "theme": {
    "contributors": "igmoweb,mrfoxtalbot",
    "testedUpTo": "WordPress 5.0-trunk"
  }
}
