{
  "name": "domestic",
  "title": "Domestic Theme",
  "version": "0.1.0",
  "description": "Domestic Theme for WordPress",
  "homepage": "https://igmoweb.com",
  "license": "MIT",
  "main": "gulpfile.js",
  "scripts": {
    "postinstall": "composer install",
    "start": "gulp",
    "dev": "gulp build --dev",
    "build": "gulp build --production && npm run commit-build",
    "package": "gulp package --production && npm run commit-build",
    "commit-build": "git add --force dist/ languages/ && git commit -m 'New build'",
    "phpcs": "gulp phpcs",
    "phpcbf": "gulp phpcbf",
    "wppot": "gulp wpPot",
    "lint:php": "./vendor/bin/phpcs --extensions=php --standard=phpcs.ruleset.xml -s .",
    "lint:js": "./vendor/bin/phpcs --extensions=js --standard=phpcs.ruleset.xml -s .",
    "fix-lint:php": "./vendor/bin/phpcbf --standard=phpcs.ruleset.xml ."
  },
  "keywords": [
    "WordPress",
    "Theme",
    "semantic",
    "mobile first",
    "customizable",
    "responsive"
  ],
  "dependencies": {
    "foundation-sites": "6.4.3",
    "jquery": "~3.0.0",
    "motion-ui": "~1.2.2",
    "owl.carousel": "^2.3.2",
    "slick-carousel": "^1.8.1",
    "what-input": "^4.1.3"
  },
  "devDependencies": {
    "ansi-colors": "^1.0.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.7.2",
    "browser-sync": "^2.10.0",
    "dateformat": "^3.0.2",
    "eslint": "^4.19.1",
    "fancy-log": "^1.3.2",
    "gulp": "git+https://github.com/gulpjs/gulp.git#v4.0.0",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-babel": "^6.1.2",
    "gulp-clean-css": "^3.3.1",
    "gulp-cli": "^1.2.1",
    "gulp-concat": "^2.5.2",
    "gulp-extname": "^0.2.0",
    "gulp-if": "^2.0.0",
    "gulp-imagemin": "^2.2.1",
    "gulp-load-plugins": "^1.1.0",
    "gulp-phpcbf": "^0.1.2",
    "gulp-phpcs": "^2.1.0",
    "gulp-rev": "^8.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^1.2.0",
    "gulp-wp-pot": "^2.2.0",
    "gulp-zip": "^4.0.0",
    "husky": "^1.0.0-rc.1",
    "js-yaml": "^3.4.6",
    "panini": "^1.3.0",
    "rimraf": "^2.4.3",
    "style-sherpa": "^1.0.0",
    "vinyl-named": "^1.1.0",
    "webpack": "^3.10.0",
    "webpack-stream": "^4.0.0",
    "yargs": "^3.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/igmoweb/domestic.git"
  },
  "bugs": {
    "url": "https://github.com/igmoweb/domestic/issues"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:php"
    }
  }
}
